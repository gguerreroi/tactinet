<%
 function inputfloat(
         colsm,
         colmd,
         collg,
         type,
         label,
         iid, name = '', vale = ''

 ){
     name = name === '' ? iid : name;
     return `<div class="col-12 col-sm-${colsm} col-md-${colmd} col-lg-${collg}">
                <div class="form-floating mb-7">
                    <input type="${type}" class="form-control" id="${iid}" name="${name}" value="${vale}">
                    <label for="${iid}">${label}</label>
                </div>
            </div>`;
 }

 %>

