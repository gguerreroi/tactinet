<!DOCTYPE html>
<html lang="es">
<!--begin::Head-->
<head>
    <%- include('../../components/web-header') %>
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body"
      class="header-fixed header-tablet-and-mobile-fixed toolbar-enabled toolbar-fixed toolbar-tablet-and-mobile-fixed aside-enabled aside-fixed"
      style="--kt-toolbar-height:55px;--kt-toolbar-height-tablet-and-mobile:55px">
<!--begin::Main-->
<!--begin::Root-->
<div class="d-flex flex-column flex-root">
    <!--begin::Page-->
    <div class="page d-flex flex-row flex-column-fluid">
        <%- include('../../components/left-aside') %>
        <!--begin::Wrapper-->
        <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
            <%- include('../../components/kt-header') %>
            <!--begin::Content
            TODO: motrar todas las gestiones completadas en una tabla
            -->
            <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                <!--begin::Entry-->
                <div class="d-flex flex-column-fluid">
                    <!--begin::Container-->
                    <div class="container">
                        <!--begin::Dashboard-->
                        <!--begin::Row-->
                        <div class="row">
                            <div class="col-xl-12">
                                <!--begin::Card-->
                                <div class="card card-custom gutter-b">
                                    <div class="card-header flex-wrap py-5">
                                        <div class="card-title">
                                            <h3 class="card-label">Gestiones completadas</h3>
                                        </div>
                                        <div class="card-toolbar">
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <!--begin: Datatable-->
                                        <table class="table table-separate table-head-custom table-checkable"
                                               id="kt_datatable">
                                            <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Cliente</th>
                                                <th>Clasificación</th>
                                                <th>Finalización</th>
                                                <th>Tecnico</th>
                                                <th>Sector</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                        <!--end: Datatable-->
                                    </div>
                                </div>
                                <!--end::Card-->
                            </div>
                        </div>
                        <!--end::Row-->
                        <!--end::Dashboard-->
                    </div>
                    <!--end::Container-->
                </div>
                <!--end::Entry-->
            </div>
            <!--end::Content-->
            <%- include('../../components/bottom-footer.ejs') %>
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Page-->
</div>
<!--end::Root-->

<%- include('../../components/kt-scrolltop') %>

<%- include('../../components/web-footer') %>
<!--begin::Page Custom Javascript(used by this page)-->
<script src="assets/js/custom/widgets.js"></script>
<script>
    const url = `${window.location.origin}/api`;
    moment.locale('es');

    const dtTaskPending = $("#kt_datatable").DataTable({
        ordering: false,
        search: true,
        ajax: `${url}/tasks/complete`,
        columns: [
            {data: 'CODACTIVIDAD'},
            {data: 'STRNOMBRESER'},
            {data: 'STRCLASIFICACION'},
            {data: 'FCHFINALIZADO'},
            {data: '_STREMPLEADOFINALIZO'},
            {data: 'STRSECTOR'}
        ],
        columnDefs: [
            {
                targets: [0],
                render: function (data, type, row) {
                    return `<a href="services/tasks/details/${data}">${data}</a>`;
                }
            }, {
                targets: [2],
                render: function (data, type, row) {
                    return `<span class="badge badge-light-primary">${row.STRCLASIFICACION}</span>`;
                }
            }
        ],
        order: [[3, "desc"]],
    });
</script>
<!--end::Page Custom Javascript-->
<!--end::Javascript-->
</body>
<!--end::Body-->
</html>