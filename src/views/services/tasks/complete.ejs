<!--begin::Page Custom Javascript(used by this page)-->
<script src="assets/js/custom/widgets.js"></script>
<script>
    const url = `${window.location.origin}/api`;
    moment.locale('es');
    const filterSearch = document.querySelector('[data-kt-filter="search"]');
    
    const dtTaskPending = $("#kt_datatable").DataTable({
        ordering: false,
        search: true,
        ajax: `${url}/tasks/complete`,
        columns: [
            {data: 'CODACTIVIDAD'},
            {data: 'STRNOMBRESER'},
            {data: 'STRCLASIFICACION'},
            {data: '_FCHFINALIZADO'},
            {data: '_STREMPLEADOFINALIZO'},
            {data: 'STRSECTOR'}
        ],
        columnDefs: [
            {
                targets: [0],
                render: function (data, type, row) {
                    return `<a href="services/tasks/details/${data}">${data}</a>`;
                }
            }, {
                targets: [2],
                render: function (data, type, row) {
                    return `<span class="badge badge-light-primary">${row.STRCLASIFICACION}</span>`;
                }
            }, {
                targets: [3],
                render: function (data, type, row){
                    return moment(data).format('DD-MM-YYYY');
                }
            }
        ],
        order: [[3, "desc"]],
    });

    filterSearch.addEventListener('keyup', function (e) {
        dtTaskPending.search(e.target.value).draw();
    });
</script>
<!--end::Page Custom Javascript-->
<!--end::Javascript-->
