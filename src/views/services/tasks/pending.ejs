<!--end::Javascript-->
<script>
    const url = `${window.location.origin}/api`;
    moment.locale('es');

    const dtTaskPending = $("#kt_datatable").DataTable({
        ajax: `${url}/tasks/pending/`,
        columns: [
            {data: 'CODACTIVIDAD'},
            {data: 'STRNOMBRESER'},
            {data: '_FCHCREACION'},
            {data: 'CODSECTOR'},
            {data: 'TELEFONO'},
            {data: 'MOVIL'},
            {data: 'CODCLASIFICACION'},
        ],
        columnDefs: [
            {
                targets: [0],
                render: function (data, type, row) {
                    return `<a href="services/tasks/details/${data}">${data}</a>`;
                }
            }, {
                targets: [2],
                render: function (data, type, row) {
                    return moment(data.substring(0, data.length - 1)).startOf('hour').fromNow()
                }
            }, {
                targets: [4],
                render: function (data, type, row) {
                    const {MOVIL} = row;
                    let other = MOVIL ? `-<a href="tel:${MOVIL}">${MOVIL}</a>` : '';

                    return `<a href="tel:${data}">${data}</a>${other}`;
                }
            },
            {
                targets: [5],
                visible: false
            }, {
                targets: [6],
                render: function (data, type, row) {
                    return `<span class="badge badge-light-primary">${row.STRCLASIFICACION}</span>`;
                }
            }

        ],
        order: [[0, 'asc']]
    });


</script>
